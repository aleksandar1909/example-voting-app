pipeline {
    
 agent {
     docker{
         image 'nodejs:8.16.0-alpine'
         args '-v $HOME/.m2:/root/.m2'
     }
 }
 
 stages {
     stage('build'){
         when{
            changeset "**/result/**"
         }
         steps{
            echo 'Compiling result app'
            dir('result'){
                sh 'npm install'
            }
         }
     }
     stage('test'){
         when{
            changeset "**/result/**"
         }
         steps{
            echo 'Running Unit Tests on result app' 
            dir('result'){
                sh 'npm install'
                sh 'npm test'
            }
         }
     }
 }
 

    
}